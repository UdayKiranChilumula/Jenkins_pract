pipeline {
    agent any

    environment {
        // Predefine it empty (optional)
        DAY_OF_WEEK = ''
    }

    stages {
        stage('Set Day') {
            steps {
                script {
                    env.DAY_OF_WEEK = sh(script: "date +%A", returnStdout: true).trim()
                    echo "Today is: ${env.DAY_OF_WEEK}"
                }
            }
        }

        stage('Monday') {
            when {
                expression { env.DAY_OF_WEEK == 'Monday' }
            }
            steps {
                echo 'It is Monday'
            }
        }

        stage('Tuesday') {
            when {
                expression { env.DAY_OF_WEEK == 'Tuesday' }
            }
            steps {
                echo 'It is Tuesday'
            }
        }

        stage('Wednesday') {
            when {
                expression { env.DAY_OF_WEEK == 'Wednesday' }
            }
            steps {
                echo 'It is Wednesday'
            }
        }

        stage('Thursday') {
            when {
                expression { env.DAY_OF_WEEK == 'Thursday' }
            }
            steps {
                echo 'It is Thursday'
            }
        }

        stage('Friday') {
            when {
                expression { env.DAY_OF_WEEK == 'Friday' }
            }
            steps {
                echo 'It is Friday'
            }
        }

        stage('Saturday') {
            when {
                expression { env.DAY_OF_WEEK == 'Saturday' }
            }
            steps {
                echo 'It is Saturday'
            }
        }

        stage('Sunday') {
            when {
                expression { env.DAY_OF_WEEK == 'Sunday' }
            }
            steps {
                echo 'It is Sunday'
            }
        }
    }
}
