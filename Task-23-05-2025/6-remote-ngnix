pipeline {
    agent any

    environment {
        REMOTE_HOST = "44.204.13.61"    
        SSH_USER = "ec2-user"                  
        SSH_CREDENTIALS_ID = "ssh-private-key-ec2"
    }

    stages {
        stage('Deploy Nginx on Fedora EC2') {
            steps {
                sshagent (credentials: [env.SSH_CREDENTIALS_ID]) {
                    sh """
                    ssh -o StrictHostKeyChecking=no ${SSH_USER}@${REMOTE_HOST} << 'EOF'
                        set -e
                        echo "Updating Fedora packages..."
                        sudo dnf update -y

                        echo "Installing Nginx..."
                        sudo dnf install -y nginx

                        echo "Starting and enabling Nginx..."
                        sudo systemctl start nginx
                        sudo systemctl enable nginx

                        echo "Nginx deployed successfully on Fedora EC2."
                    EOF
                    """
                }
            }
        }
    }
}
