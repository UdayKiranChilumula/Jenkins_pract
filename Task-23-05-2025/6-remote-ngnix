pipeline {
    agent any

    environment {
        REMOTE_HOST = "44.204.13.61"      
        SSH_USER = "ec2-user"
        // Assume this is a Secret Text credential containing the private key
        SSH_PRIVATE_KEY = credentials('ssh-private-key-ec2')
    }

    stages {
        stage('Install Nginx via SSH (No Plugin)') {
            steps {
                sh '''
                    echo "Setting up SSH key..."
                    mkdir -p ~/.ssh
                    echo "$SSH_PRIVATE_KEY" > ~/.ssh/id_rsa
                    chmod 600 ~/.ssh/id_rsa

                    echo "Connecting to remote host and installing Nginx..."
                    ssh -o StrictHostKeyChecking=no ${SSH_USER}@${REMOTE_HOST} << 'ENDSSH'
                        set -e
                        echo "Updating system..."
                        if [ -f /etc/redhat-release ]; then
                            sudo yum update -y
                            sudo yum install nginx -y
                        elif [ -f /etc/lsb-release ] || [ -f /etc/debian_version ]; then
                            sudo apt update -y
                            sudo apt install nginx -y
                        fi

                        echo "Starting and enabling Nginx..."
                        sudo systemctl start nginx
                        sudo systemctl enable nginx

                        echo "Nginx is running:"
                        sudo systemctl status nginx | head -n 10
                    ENDSSH
                '''
            }
        }
    }
}
