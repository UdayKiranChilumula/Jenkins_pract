pipeline {
    agent any

    environment {
        API_URL = 'https://webhook.site/${params.API_TOKEN}'
    }

    stages {
        stage('Call Secure API') {
            steps {
                echo "Using token to trigger secure API"
                
                sh "curl -s -X GET ${API_URL}"
            }
        }
    }

    post {
        success {
            echo 'API call completed successfully!'
        }
        failure {
            echo 'API call failed.'
        }
    }
}
